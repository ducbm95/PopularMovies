<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_thumbnail"
        android:layout_width="@dimen/detail_imageview_width"
        android:layout_height="@dimen/detail_imageview_height"
        android:layout_margin="@dimen/detail_default_margin" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/detail_default_margin"
        android:layout_marginTop="@dimen/detail_default_margin"
        android:layout_toRightOf="@+id/iv_thumbnail"
        android:textColor="@color/black"
        android:textSize="@dimen/detail_title_textsize" />

    <TextView
        android:id="@+id/tv_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:layout_toRightOf="@+id/iv_thumbnail" />

    <TextView
        android:id="@+id/tv_releaseday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_rating"
        android:layout_toRightOf="@+id/iv_thumbnail" />


    <TextView
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="@dimen/detail_overview_height"
        android:layout_below="@+id/iv_thumbnail"
        android:layout_marginLeft="@dimen/detail_default_margin"
        android:layout_marginRight="@dimen/detail_default_margin"
        android:background="@color/overview_background"
        android:gravity="center"
        android:text="@string/overview"
        android:textColor="@color/white"
        android:textSize="@dimen/detail_overview_textsize" />


    <TextView
        android:id="@+id/tv_overview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frame"
        android:layout_margin="@dimen/detail_default_margin" />

</RelativeLayout>