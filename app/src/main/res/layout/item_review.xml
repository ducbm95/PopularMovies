<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/detail_default_margin"
    android:layout_marginRight="@dimen/detail_default_margin"
    android:layout_marginTop="@dimen/item_review_margin_top">

    <ImageView
        android:id="@+id/iv_author"
        android:layout_width="@dimen/item_image_view_author_size"
        android:layout_height="@dimen/item_image_view_author_size"
        android:background="@drawable/no_image" />

    <TextView
        android:id="@+id/tv_author_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/item_review_author_name_margin_left"
        android:layout_marginTop="@dimen/item_review_author_name_margin_top"
        android:layout_toRightOf="@+id/iv_author"
        android:textSize="@dimen/item_review_author_name_text_size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_author"
        android:layout_marginTop="@dimen/item_review_content_margin_top" />

</RelativeLayout>