<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_trailer_height"
    android:layout_marginLeft="@dimen/detail_default_margin"
    android:layout_marginRight="@dimen/detail_default_margin"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_trailer"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical" />

    <Button
        android:id="@+id/btn_play_trailer"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/btn_play_trailer_size"
        android:layout_alignParentRight="true"
        android:text="@string/btn_play"/>

</RelativeLayout>